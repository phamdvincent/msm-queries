<h1>Director #<%= @director_id %> details</h1>
<a href="/directors">Go back</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @director.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @director.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <% if @director.bio %>
      <%= @director.bio %>
    <% end%>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @director.image %>" style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= @director.created_at %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= @director.updated_at%>
  </dd>
</dl>

<hr>

<h2>Filmography</h2>


<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>


  <% @filmography.each do |film| %>
    <tr>
      <td>
        <%= film.id %>
      </td>

      <td>
        <img src="<%= film.image %>" style="width:250px;">
      </td>

      <td>
        <%= film.title %>
      </td>

      <td>
        <%= film.year%>
      </td>

      <td>
        <%= @director.name %>
      </td>

      <td>
        <a href="/movies/1">
          Show details
        </a>
      </td>
    </tr>
  <% end %>
</table>
